{
  "name": "loginapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run generate && next build",
    "only:build": " next build",
    "start": "NODE_PATH=./src && next start",
    "tsc": "tsc",
    "updatePackages": "ncu -u",
    "lint": "next lint",
    "generate": "npx zenstack generate",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config .prettierrc.js",
    "prisma:seed": "dotenv -e .env.local -- prisma db seed",
    "prisma:db-push": "dotenv -e .env.local -- prisma db push",
    "prisma:migrate-dev": "dotenv -e .env.local -- prisma migrate dev"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.9.1",
    "@mantine/core": "^8.1.0",
    "@mantine/dates": "^8.1.0",
    "@mantine/form": "^8.1.0",
    "@mantine/hooks": "^8.1.0",
    "@mantine/modals": "^8.1.0",
    "@mantine/notifications": "^8.1.0",
    "@mantine/nprogress": "^8.1.0",
    "@mantine/tiptap": "^8.1.0",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.8.2",
    "@prisma/extension-accelerate": "^2.0.1",
    "@tanstack/react-query": "^5.80.7",
    "@tiptap/extension-link": "^2.14.0",
    "@tiptap/pm": "^2.14.0",
    "@tiptap/react": "^2.14.0",
    "@tiptap/starter-kit": "^2.14.0",
    "@types/bcryptjs": "^2.4.6",
    "@zenstackhq/runtime": "2.15.1",
    "dayjs": "^1.11.13",
    "next": "15.3.3",
    "next-auth": "^4.24.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.3.3",
    "@types/node": "^20.19.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "postcss": "^8.5.5",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "6.8.x",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "zenstack": "2.15.1"
  }
}
